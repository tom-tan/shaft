FROM alpine:3.17

ARG NJS_VERSION=0.7.6

COPY .devcontainer/setup-njs.sh /tmp

RUN apk --no-cache add dub ldc gcc musl-dev git llvm-libunwind-static pcre2-dev make clang14-dev binutils-gold && \
    git config --global --add safe.directory /workdir

RUN /tmp/setup-njs.sh ${NJS_VERSION} /opt/njs && rm /tmp/setup-njs.sh

WORKDIR /workdir

ENV NJS_BASE=/opt/njs
