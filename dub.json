{
	"authors": [
		"Tomoya Tanjo"
	],
	"buildTypes": {
		"release-static": {
			"buildOptions": [
				"releaseMode",
				"inline",
				"optimize"
			],
			"dflags-posix-ldc": [
				"-static"
			],
			"lflags-posix": [
				"--eh-frame-hdr"
			]
		}
	},
	"preBuildCommands": [
		"./gen-version.sh > resources/version"
	],
	"preBuildCommands-osx": [
		"mkdir -p .libclang",
		"ln -sf /Applications/Xcode.app/Contents/Developer/Toolchains/XcodeDefault.xctoolchain/usr/lib/ $PACKAGE_DIR/.libclang",
		"env LDFLAGS=\"-L$PACKAGE_DIR/.libclang -Wl,-rpath,$PACKAGE_DIR/.libclang\" dub run -y dpp -- --ignore-system-paths --include-path=/opt/njs/include --preprocess-only source/shaft/evaluator/engine/embedded.dpp"
	],
	"preBuildCommands-linux": [
		"dub run -y dpp -- --ignore-system-paths --include-path=/opt/njs/include --preprocess-only source/shaft/evaluator/engine/embedded.dpp"
	],
	"extraDependencyFiles": [
		"source/shaft/evaluator/engine/embedded.dpp",
		"source/shaft/evaluator/engine/embedded.d"
	],
	"lflags": ["-L/opt/njs/lib", "-lnjs", "-lpcre2-8"],
	"stringImportPaths": [
		"resources"
	],
	"copyright": "Copyright Â© 2022, Tomoya Tanjo",
	"dependencies": {
		"schema-salad-d": "~>0.7.20"
	},
	"description": "A workflow engine for CommandLineTool in local machine",
	"homepage": "https://github.com/tom-tan/shaft",
	"license": "Apache-2.0",
	"name": "shaft",
	"targetPath": "bin",
	"targetType": "executable"
}
