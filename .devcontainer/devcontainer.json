{
  "dockerComposeFile": "docker-compose.yml",
  "service": "dev",
  "extensions": ["sbg-rabix.benten-cwl", "webfreak.dlang-bundle"],
  "settings": {
    "d.dmdPath": "dmd",
    "d.stdlibPath": [
      // for dmd
      "/dlang/dc/src/druntime/import",
      "/dlang/dc/src/phobos",
      // for ldc and gdc
      "/dlang/dc/import"
    ],
    "files.associations": {
      ".dpp": "D"
    }
  },
  "remoteUser": "vscode",
  "workspaceFolder": "/workspaces/shaft",
  "postCreateCommand": [
    "./.devcontainer/cloneCWL.sh"
  ]
}
